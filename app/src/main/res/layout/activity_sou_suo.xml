<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.sousuo.view.activity.SouSuoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f00"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/a_s"
            android:layout_gravity="center"
            android:id="@+id/sousuo_imageBtn"
            />
        <EditText
            android:layout_width="500dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_margin="15dp"
            android:hint="请输入内容"
            android:id="@+id/sousuo_editText_addresou"
            android:drawableLeft="@drawable/search_icon2"
            />
        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:background="@drawable/assx"
            android:id="@+id/sousuo_imageBtnOne"
            />
    </LinearLayout>
    <com.example.wangtao.day7_jingdong.mvp.homewo.view.fragment.WoFlowlayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/sousuo_layout_sousuo"
        >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="热搜"
    android:textSize="25dp"
    android:textColor="#000"
    android:textStyle="bold"
    />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="手机"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"  />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="笔记本"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"  />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="一加"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp" />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="联想"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp" />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="小米"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp" />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="戴尔"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp" />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="苹果"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"                />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="锤子"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"
    />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="vivo"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"                />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="三星"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"                />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="北京"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"                />
<TextView
    android:layout_width="70dp"
    android:layout_height="wrap_content"
    android:text="月饼"
    android:gravity="center"
    android:textSize="20dp"
    android:background="#eeeeee"
    android:layout_marginRight="10dp"/>
    </com.example.wangtao.day7_jingdong.mvp.homewo.view.fragment.WoFlowlayout>


    <LinearLayout
        android:id="@+id/sou_suo_linearLayour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="默认"
                android:id="@+id/sou_suo_moren"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="销量"
                android:id="@+id/sou_suo_xiaoNum"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格"
                android:id="@+id/sou_suo_price"
                />
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/sousuo_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>
