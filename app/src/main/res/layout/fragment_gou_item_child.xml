<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layout_gravity="center_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gou_item_child_checkBox"
            />
        <ImageView
            android:layout_toRightOf="@+id/gou_item_child_checkBox"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/gou_item_child_imageVIew"
            />
        <LinearLayout
            android:id="@+id/child_lay"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gou_item_child_titleTv"
                android:text="sadhajhd"
                android:textSize="20dp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gou_item_child_PriceTv"
                android:text="sajhdakj"
                />
        </LinearLayout>
    </LinearLayout>
       <com.example.wangtao.day7_jingdong.mvp.homegou.view.fragmnets.MyAddStuds
           android:layout_marginTop="25dp"
           android:layout_width="70dp"
           android:layout_height="wrap_content"
           android:id="@+id/grou_item_child_myAddStuds"
           android:gravity="center_vertical"
           android:layout_alignParentRight="true"
           ></com.example.wangtao.day7_jingdong.mvp.homegou.view.fragmnets.MyAddStuds>
</RelativeLayout>
